@model List<MyAcademyCQRS.Entities.OrderDetail>
@{
    ViewData["Title"] = "Sipariş Detayı";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sipariş Detayları</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sipariş Numarası: #@ViewContext.RouteData.Values["id"]</div>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-head-bg-primary">
                            <thead>
                                <tr>
                                    <th>Ürün Görseli</th>
                                    <th>Ürün Adı</th>
                                    <th>Birim Fiyat</th>
                                    <th>Adet</th>
                                    <th>Ara Toplam</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="width:100px;">
                                            <img src="@item.Product.ImageUrl" style="width:70px; height:70px; object-fit:cover; border-radius:5px;" />
                                        </td>
                                        <td>@item.Product.Name</td>
                                        <td>@item.UnitPrice.ToString("C2")</td>
                                        <td>@item.Quantity Adet</td>
                                        <td>@((item.UnitPrice * item.Quantity).ToString("C2"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr style="font-weight:bold; background-color:#f8f9fa;">
                                    <td colspan="4" class="text-right">Genel Toplam:</td>
                                    <td>@Model.Sum(x => x.UnitPrice * x.Quantity).ToString("C2")</td>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="mt-3">
                            <a href="/Admin/Order/Index" class="btn btn-secondary">Sipariş Listesine Dön</a>
                            <button onclick="window.print()" class="btn btn-dark">Yazdır / PDF</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>