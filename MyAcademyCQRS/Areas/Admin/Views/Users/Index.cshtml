@model List<ResultUserDto>

@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}


<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 fw-bold text-dark">
            <i class="fas fa-users me-2 text-primary"></i>Sistem Kullanıcıları
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="px-4 py-3" style="width: 50px;">#</th>
                        <th class="py-3">Kullanıcı Bilgisi</th>
                        <th class="py-3">Email</th>
                        <th class="py-3">Atanmış Roller</th>
                        <th class="py-3 text-end px-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int count = 0; }
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td class="px-4 fw-semibold text-muted">@count</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="https://ui-avatars.com/api/?name=@item.FullName&background=random&color=fff" 
                                         class="rounded-circle me-3" width="35" height="35" />
                                    <div>
                                        <div class="fw-bold text-dark">@item.FullName</div>
                                        <small class="text-muted">@@@item.UserName</small>
                                    </div>
                                </div>
                            </td>
                            <td><span class="text-muted">@item.Email</span></td>
                            <td>
                                @if (item.Roles != null && item.Roles.Any())
                                {
                                    @foreach (var role in item.Roles)
                                    {
                                        <span class="badge rounded-pill bg-soft-primary text-primary border border-primary-subtle px-3 py-2 me-1" 
                                              style="background-color: #eef2ff; font-size: 0.75rem;">
                                            <i class="fas fa-user-tag me-1 small"></i>@role
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small italic">Rol Atanmamış</span>
                                }
                            </td>
                            <td class="text-end px-4">
                                <a href="/Admin/Users/AssignRole/@item.Id" 
                                   class="btn btn-outline-info btn-sm rounded-pill px-4 shadow-none">
                                   <i class="fas fa-user-shield me-1"></i> Rol Ata
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>