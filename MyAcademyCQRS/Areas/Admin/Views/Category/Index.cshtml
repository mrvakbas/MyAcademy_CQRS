@model List<GetCategoriesQueryResult>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 fw-bold text-dark">Kategoriler</h5>
        <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary btn-sm px-3">
            <i class="fas fa-plus me-2"></i>Yeni Kategori
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="px-4 py-3" style="width: 50px;">#</th>
                        <th class="py-3">Kategori Adı</th>
                        <th class="py-3 text-end px-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{int count = 0;}
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td class="px-4 fw-semibold text-muted">@count</td>
                            <td class="fw-bold text-dark">@item.Name</td>
                            <td class="text-end px-4">
                                <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" 
                                   class="btn btn-outline-info btn-sm me-2 rounded-pill px-3">
                                   <i class="fas fa-edit"></i> Güncelle
                                </a>
                                <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" 
                                   class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                   <i class="fas fa-trash-alt"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>