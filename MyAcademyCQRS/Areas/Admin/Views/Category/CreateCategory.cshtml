@model CreateCategoryCommand
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="m-0 fw-bold text-dark">
                    <i class="fas fa-plus-circle me-2 text-primary"></i>Yeni Kategori Oluştur
                </h5>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold text-muted">Kategori Adı</label>
                        <input type="text" asp-for="Name" class="form-control form-control-lg border-2 shadow-none" 
                               placeholder="Örn: Unlu Mamuller" style="border-radius: 10px; font-size: 0.95rem;" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="d-flex gap-2 pt-2">
                        <button type="submit" class="btn btn-primary px-4 py-2" style="border-radius: 8px; font-weight: 600;">
                            <i class="fas fa-save me-2"></i>Kaydet
                        </button>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary px-4 py-2" style="border-radius: 8px;">
                            İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>