@model GetCategoryByIdQueryResult
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="m-0 fw-bold text-dark">
                    <i class="fas fa-edit me-2 text-info"></i>Kategori Düzenle
                </h5>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-semibold text-muted">Kategori Adı</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-2 border-end-0" style="border-radius: 10px 0 0 10px;">
                                <i class="fas fa-tag text-muted"></i>
                            </span>
                            <input type="text" asp-for="Name" class="form-control form-control-lg border-2 shadow-none" 
                                   placeholder="Kategori ismini giriniz..." 
                                   style="border-radius: 0 10px 10px 0; font-size: 0.95rem;" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="d-flex gap-2 pt-2">
                        <button type="submit" class="btn btn-info text-white px-4 py-2" style="border-radius: 8px; font-weight: 600;">
                            <i class="fas fa-sync-alt me-2"></i>Değişiklikleri Kaydet
                        </button>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary px-4 py-2" style="border-radius: 8px;">
                            Vazgeç
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>