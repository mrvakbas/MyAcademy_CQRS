@model List<MyAcademyCQRS.CQRSPattern.Results.PromotionResults.GetPromotionQueryResult>

@{
    ViewData["Title"] = "Kampanyalar";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<style>
    /* Dashboard ile uyumlu ek stiller */
    .table-hover tbody tr:hover {
        background-color: #f8f9fc;
        transition: 0.2s;
    }

    .promotion-card {
        border-radius: 15px;
        overflow: hidden;
    }

    /* Soft Renk Tanımlamaları */
    .bg-soft-promotion {
        background-color: #f3e5f5 !important;
        color: #7b1fa2 !important;
    }

    .action-btn {
        width: 35px;
        height: 35px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: 0.3s;
    }

    .action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>

<div class="container-fluid px-4 pt-4">
    <div class="card border-0 shadow-sm mb-4 promotion-card">
        <div class="card-header bg-white py-4 border-bottom-0 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="fw-bold text-dark mb-1">
                    <i class="fas fa-bullhorn me-2 text-primary"></i>Kampanya Yönetimi
                </h4>
                <p class="text-muted small mb-0">Sistemdeki aktif promosyonları ve fiyatlandırmaları buradan yönetebilirsiniz.</p>
            </div>
            <a href="/Admin/Promotion/CreatePromotion" class="btn btn-primary rounded-pill px-4 shadow-sm">
                <i class="fas fa-plus me-2"></i> Yeni Kampanya Ekle
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="px-4 py-3" style="width: 120px;">Görsel</th>
                            <th class="py-3">Kampanya Detayları</th>
                            <th class="py-3">Durum / Modül</th>
                            <th class="py-3">Fiyat</th>
                            <th class="py-3 text-end px-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-4">
                                    <div class="position-relative">
                                        <img src="@item.ImageUrl" class="rounded shadow-sm border" style="width: 80px; height: 60px; object-fit: cover;" />
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@item.Title</div>
                                    <div class="text-muted small" style="max-width: 350px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        @item.Description
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-soft-promotion rounded-pill px-3">
                                        <i class="fas fa-tag me-1" style="font-size: 0.7rem;"></i> PROMOSYON
                                    </span>
                                </td>
                                <td>
                                    <div class="fw-bold text-success">
                                        ₺@item.Price.ToString("N2")
                                    </div>
                                </td>
                                <td class="text-end px-4">
                                    <div class="d-flex justify-content-end">
                                        <a href="/Admin/Promotion/UpdatePromotion/@item.Id" 
                                           class="btn btn-light action-btn rounded-circle me-2 text-warning border" 
                                           title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/Admin/Promotion/RemovePromotion/@item.Id" 
                                           class="btn btn-light action-btn rounded-circle text-danger border"
                                           onclick="return confirm('Bu kampanyayı silmek istediğinize emin misiniz?')" 
                                           title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>