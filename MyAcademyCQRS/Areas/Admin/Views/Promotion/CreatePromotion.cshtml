@model MyAcademyCQRS.CQRSPattern.Commands.PromotionCommands.CreatePromotionCommand

@{
    ViewData["Title"] = "CreatePromotion";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Yeni Kampanya Ekleme Formu</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label>Kampanya Başlığı</label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="Örn: Bahar Fırsatı" required />
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Kampanya detaylarını giriniz..."></textarea>
                </div>

                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="number" asp-for="Price" class="form-control" placeholder="0" required />
                </div>

                <div class="form-group">
                    <label>Görsel URL (Resim Yolu)</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                </div>

                <br />
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Kampanyayı Kaydet
                </button>
                <a href="/Admin/Promotion/Index" class="btn btn-secondary">İptal</a>
            </form>
        </div>
    </div>
</div>