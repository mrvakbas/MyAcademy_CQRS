@model List<GetProductsQueryResult>

@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 fw-bold text-dark">Ürün Yönetimi</h5>
        <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-primary btn-sm px-3">
            <i class="fas fa-plus me-2"></i>Yeni Ürün Oluştur
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="px-4 py-3" style="width: 50px;">#</th>
                        <th class="py-3">Ürün</th>
                        <th class="py-3">Açıklama</th>
                        <th class="py-3 text-center">Fiyat</th>
                        <th class="py-3 text-center">Kategori</th>
                        <th class="py-3 text-end px-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int count = 0; }
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td class="px-4 fw-semibold text-muted">@count</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@item.ImageUrl" class="rounded-3 me-3" style="width: 45px; height: 45px; object-fit: cover;" alt="@item.Name" />
                                    <div class="fw-bold text-dark">@item.Name</div>
                                </div>
                            </td>
                            <td class="text-muted small" style="max-width: 250px;">@item.Description</td>
                            <td class="text-center fw-bold text-primary">@item.Price.ToString("C2")</td>
                            <td class="text-center">
                                <span class="badge bg-soft-info text-info px-3 py-2 rounded-pill" style="background-color: #e0f2fe;">
                                    @item.Category.Name
                                </span>
                            </td>
                            <td class="text-end px-4">
                                <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id" 
                                   class="btn btn-outline-info btn-sm me-1 rounded-pill px-3">
                                   <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Id" 
                                   class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                   <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>