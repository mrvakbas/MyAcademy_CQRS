@model GetProductByIdQueryResult
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="m-0 fw-bold text-dark">
                    <i class="fas fa-edit me-2 text-info"></i>Ürün Bilgilerini Düzenle
                </h5>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Ürün Adı</label>
                            <input type="text" asp-for="Name" class="form-control border-2 shadow-none" placeholder="Ürün adını giriniz" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Fiyat</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-2">₺</span>
                                <input type="text" asp-for="Price" class="form-control border-2 shadow-none" placeholder="0.00" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Açıklama</label>
                        <textarea asp-for="Description" class="form-control border-2 shadow-none" rows="2" placeholder="Ürün hakkında kısa bilgi..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Görsel Url</label>
                        <div class="input-group">
                            <input type="text" asp-for="ImageUrl" class="form-control border-2 shadow-none" placeholder="https://..." />
                            <span class="input-group-text bg-white border-2">
                                <i class="fas fa-image text-muted"></i>
                            </span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold text-muted">Kategori</label>
                        <select asp-for="CategoryId" class="form-select border-2 text-muted shadow-none" asp-items="@ViewBag.categories">
                            <option disabled>--- Kategori Seçiniz ---</option>
                        </select>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-info text-white px-4 py-2" style="border-radius: 8px; font-weight: 600;">
                            <i class="fas fa-sync-alt me-2"></i>Değişiklikleri Kaydet
                        </button>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary px-4 py-2" style="border-radius: 8px;">
                            Vazgeç
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm text-center p-4">
            <h6 class="text-muted mb-3">Mevcut Görsel</h6>
            <img src="@Model.ImageUrl" class="img-fluid rounded-3 shadow-sm mx-auto" style="max-height: 200px; object-fit: cover;" alt="Önizleme" />
        </div>
    </div>
</div>