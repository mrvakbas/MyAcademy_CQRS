@model CreateProductCommand
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="m-0 fw-bold text-dark">
                    <i class="fas fa-box-open me-2 text-primary"></i>Yeni Ürün Ekle
                </h5>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Ürün Adı</label>
                            <input type="text" asp-for="Name" class="form-control border-2" placeholder="Ürün adını giriniz" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Fiyat</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-2">₺</span>
                                <input type="text" asp-for="Price" class="form-control border-2" placeholder="0.00" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Açıklama</label>
                        <input type="text" asp-for="Description" class="form-control border-2" placeholder="Ürün hakkında kısa bilgi..." />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Görsel Url</label>
                        <input type="text" asp-for="ImageUrl" class="form-control border-2" placeholder="https://..." />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold text-muted">Kategori</label>
                        <select asp-for="CategoryId" class="form-select border-2 text-muted" asp-items="@ViewBag.categories">
                            <option selected disabled>--- Kategori Seçiniz ---</option>
                        </select>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary px-4 py-2" style="border-radius: 8px; font-weight: 600;">
                            <i class="fas fa-save me-2"></i>Kaydet
                        </button>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary px-4 py-2" style="border-radius: 8px;">
                            İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>