@model MyAcademyCQRS.Entities.AppRole
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="m-0 fw-bold text-dark">
                    <i class="fas fa-edit me-2 text-info"></i>Rol Bilgilerini Düzenle
                </h5>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-semibold text-muted">Rol Adı</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-2 border-end-0" style="border-radius: 10px 0 0 10px;">
                                <i class="fas fa-user-shield text-muted"></i>
                            </span>
                            <input type="text" asp-for="Name" class="form-control form-control-lg border-2 shadow-none"
                                   placeholder="Rol ismini giriniz..." required
                                   style="border-radius: 0 10px 10px 0; font-size: 0.95rem;" />
                        </div>
                        <div class="form-text mt-2 text-info">
                            <i class="fas fa-info-circle me-1"></i> Bu değişiklik, bu role sahip tüm kullanıcıları etkileyecektir.
                        </div>
                    </div>

                    <div class="d-flex gap-2 pt-2">
                        <button type="submit" class="btn btn-info text-white px-4 py-2 shadow-none" style="border-radius: 8px; font-weight: 600;">
                            <i class="fas fa-sync-alt me-2"></i>Değişiklikleri Uygula
                        </button>
                        <a href="/Admin/Role/Index" class="btn btn-outline-secondary px-4 py-2 shadow-none" style="border-radius: 8px;">
                            Vazgeç
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>